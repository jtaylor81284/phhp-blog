file = {:E$\backslash$:/OneDrive - University of Edinburgh/Coursework/SEM1/Public Health/References/2020{\_}Lu, Pearce, Li{\_}Distinct patterns of socio-economic disparities in child-to-adolescent BMI trajectories across UK ethnic groups A pr.pdf:pdf},
issn = {20476310},
journal = {Pediatric Obesity},
keywords = {BMI,United Kingdom,childhood,ethnicity,socio-economic},
number = {4},
pages = {1--9},
pmid = {31872553},
title = {{Distinct patterns of socio-economic disparities in child-to-adolescent BMI trajectories across UK ethnic groups: A prospective longitudinal study}},
volume = {15},
year = {2020}
}
@article{Weygandt2013,
abstract = {Deficits in impulse control are discussed as key mechanisms for major worldwide health problems such as drug addiction and obesity. For example, obese subjects have difficulty controlling their impulses to overeat when faced with food items. Here, we investigated the role of neural impulse control mechanisms for dietary success in middle-aged obese subjects. Specifically, we used a food-specific delayed gratification paradigm and functional magnetic resonance imaging to measure eating-related impulse-control in middle-aged obese subjects just before they underwent a twelve-week low calorie diet. As expected, we found that subjects with higher behavioral impulse control subsequently lost more weight. Furthermore, brain activity before the diet in VMPFC and DLPFC correlates with subsequent weight loss. Additionally, a connectivity analysis revealed that stronger functional connectivity between these regions is associated with better dietary success and impulse control. Thus, the degree to which subjects can control their eating impulses might depend on the interplay between control regions (DLPFC) and regions signaling the reward of food (VMPFC). This could potentially constitute a general mechanism that also extends to other disorders such as drug addiction or alcohol abuse. {\textcopyright} 2013 Elsevier Inc.},
author = {Weygandt, Martin and Mai, Knut and Dommes, Esther and Leupelt, Verena and Hackmack, Kerstin and Kahnt, Thorsten and Rothemund, Yvonne and Spranger, Joachim and Haynes, John Dylan},
