file = {:E$\backslash$:/OneDrive - University of Edinburgh/Coursework/SEM1/Public Health/References/2019{\_}Scheelbeek et al.{\_}Potential impact on prevalence of obesity in the UK of a 20{\%} price increase in high sugar snacks Modelling study.pdf:pdf},
