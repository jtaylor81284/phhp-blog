issn = {14994046},
journal = {Journal of Nutrition Education and Behavior},
number = {2},
pages = {89--99},
title = {{Nutrition education program based on EFNEP for low-income women in the United Kingdom: "friends with food"}},
volume = {30},
year = {1998}
}
@article{Teng2019,
