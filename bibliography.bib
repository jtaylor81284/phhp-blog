file = {:E$\backslash$:/OneDrive - University of Edinburgh/Coursework/SEM1/Public Health/References/2001{\_}Bj{\"{o}}rntorp{\_}Do stress reactions cause abdominal obesity and comorbidities.pdf:pdf},
issn = {14677881},
journal = {Obesity Reviews},
keywords = {Adrenals,Central,Cortisol,Leptin,Neuropeptide Y,Obesity,Stress},
number = {2},
pages = {73--86},
pmid = {12119665},
title = {{Do stress reactions cause abdominal obesity and comorbidities?}},
volume = {2},
