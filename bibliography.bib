issn = {10959572},
journal = {NeuroImage},
keywords = {DLPFC,FMRI,Impulse-control,Impulsivity,Obesity,Weight maintenance},
pages = {318--327},
pmid = {25576647},
title = {{Impulse control in the dorsolateral prefrontal cortex counteracts post-diet weight regain in obesity}},
