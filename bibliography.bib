file = {:E$\backslash$:/OneDrive - University of Edinburgh/Coursework/SEM1/Public Health/References/2013{\_}Gonnissen et al.{\_}Effects of sleep fragmentation on appetite and related hormone concentrations over 24{\^{A}} h in healthy men.pdf:pdf},
issn = {00071145},
journal = {British Journal of Nutrition},
keywords = {Fullness,Glucagon-like peptide 1,Insulin,Rapid-eye movement sleep,Sleep fragmentation},
number = {4},
pages = {748--756},
pmid = {22682471},
title = {{Effects of sleep fragmentation on appetite and related hormone concentrations over 24{\^{A}} h in healthy men}},
