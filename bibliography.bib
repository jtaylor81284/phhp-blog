journal = {Frontiers in Endocrinology},
keywords = {Addiction,Brain,Impulsivity,Obesity,Personality and neurocognitive characteristics},
number = {JUN},
title = {{Overlapping neural endophenotypes in addiction and obesity}},
volume = {8},
year = {2017}
}
